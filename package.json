{
  "name": "runesswap.app",
  "version": "0.2.8",
  "private": true,
  "scripts": {
    "test": "NODE_OPTIONS=\"--max-old-space-size=4096\" jest --runInBand",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "ai-check": "pnpm lint && pnpm format:check && pnpm type-check && pnpm test && pnpm build",
    "pre-commit-check": "pnpm type-check && pnpm test",
    "prepare": "husky",
    "gen:liquidium-sdk": "openapi -i liquidium-openapi/liquidium-instant-loan-api.yaml -o src/sdk/liquidium --client fetch --useOptions --useUnionTypes --exportSchemas true --name LiquidiumApi"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.8.0"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@omnisat/lasereyes": "^0.0.162",
    "@supabase/supabase-js": "^2.49.4",
    "@tanstack/react-query": "^5.70.0",
    "@vercel/analytics": "^1.5.0",
    "big.js": "^7.0.1",
    "next": "15.4.10",
    "ordiscan": "^1.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^9.0.1",
    "recharts": "^2.15.3",
    "remark-gfm": "^4.0.0",
    "satsterminal-sdk": "^1.6.16",
    "use-debounce": "^10.0.4",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@next/bundle-analyzer": "^15.4.5",
    "@next/eslint-plugin-next": "^15.2.6",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/big.js": "^6.2.2",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.2.6",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^15.2.10",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "typescript-eslint": "^8.46.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm exec eslint --fix"
    ],
    "*.{md,json,yml,yaml,ts,tsx,js,jsx}": [
      "pnpm exec prettier --write"
    ],
    "src/**/*.css": [
      "pnpm exec stylelint --fix"
    ]
  },
  "packageManager": "pnpm@10.8.0"
}
